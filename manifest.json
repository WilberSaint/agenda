  "protocol_handlers": [
    {
      "protocol": "web+agenda",
      "url": "/agenda/?task=%s"
    }
  ],
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "handle_links": "preferred",
  
  "share_target": {
    "action": "/agenda/?share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  
  "file_handlers": [
    {
      "action": "/agenda/?file-handler",
      "accept": {
        "text/calendar": [".ics"],
        "application/json": [".json"],
        "text/csv": [".csv"]
      }
    }
  ],
  
  "related_applications": [],
  "prefer_related_applications": false,
  
  "iarc_rating_id": "",
  
  "permissions": [
    "notifications",
    "persistent-storage"
  ],
  
  "features": [
    "Cross Platform",
    "fast",
    "simple"
  ]
}